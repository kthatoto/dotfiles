[user]
  name = kthatoto
  email = kthatoto@gmail.com
[color]
  ui = true
[alias]
  graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
  graph-n = log --graph --date-order --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short

  st = status
  cm = commit -m
  ca = commit --amend
  ch = checkout
  br = branch
  cp = cherry-pick -n
  p  = push
[core]
  editor = nvim
[init]
  defaultBranch = main
[grep]
  lineNumber = true
[color "grep"]
  match = bold red
  lineNumber = bold white
  filename = yellow
